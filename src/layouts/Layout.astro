---
import '~/styles/global.css';
import '@fontsource-variable/manrope';
import {BASE_PATH} from "../common/constants";

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
	metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={`${BASE_PATH}favicon/favicon-96x96.png`} sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href={`${BASE_PATH}favicon/favicon.svg`} />
		<link rel="shortcut icon" href={`${BASE_PATH}favicon/favicon.ico`} />
		<link rel="apple-touch-icon" sizes="180x180" href={`${BASE_PATH}favicon/apple-touch-icon.png`} />
		<link rel="manifest" href={`${BASE_PATH}favicon/site.webmanifest`} />

		<meta name="generator" content={Astro.generator} />

		<title>SoCraTes-IT</title>
	</head>
	<body class="antialiased text-default bg-white transition-colors duration-500 tracking-tight">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Manrope Variable";
	}
</style>
